<div class="ui divider"></div>
<div class="comment">
  <div class="content">
    <div class="author"><%= message.username %></div>
    <div class="metadata">
      <span class="date"><%= time_ago_in_words message.created_at %></span>
    </div>
    <div class="text">
      <%= message.body %>
    </div>
    <div class="actions">
      <%= link_to "Like #{message.link_count}", '#', class: 'reply' %>
    </div>
  </div>
</div>